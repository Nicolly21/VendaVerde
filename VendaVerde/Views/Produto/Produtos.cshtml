@model ProdutoListViewModel

@{
    ViewData["Title"] = "VendaVerde";
}

<div class="hero-wrap hero-bread" style="background-image: url(/images/bg_1.jpg); ">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Produtos</span></p>
                <h1 class="mb-0 bread">Produtos</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 mb-5 text-center">
                <ul class="product-category">
                    <li><a asp-controller="Produto" asp-action="Produtos" asp-route-categoria="">Todos</a></li>
                    <li><a asp-controller="Produto" asp-action="Produtos" asp-route-categoria="Verduras">Verduras</a></li>
                    <li><a asp-controller="Produto" asp-action="Produtos" asp-route-categoria="Frutas">Frutas</a></li>
                    <li><a asp-controller="Produto" asp-action="Produtos" asp-route-categoria="Grãos">Grãos</a></li>
                    <li><a asp-controller="Produto" asp-action="Produtos" asp-route-categoria="Raízes">Raízes</a></li>
                </ul>
            </div>
        </div>
        <div class="row">
        @foreach (var item in Model.Produtos) { 
            <div class="col-md-6 col-lg-3 ftco-animate">
                <div class="product">
                    <a asp-controller="Produto" asp-action="Detalhes" asp-route-id="@item.ProdutoId" class="img-prod">
                        <img class="img-fluid" src="@item.ImagemUrl">
                        <div class="overlay"></div>
                    </a>
                    <div class="text py-3 pb-4 px-3 text-center">
                        <h3><a asp-controller="Produto" asp-action="Detalhes" asp-route-id="@item.ProdutoId">@item.Nome</a></h3>
                        <div class="d-flex">
                            <div class="pricing">
                                <p class="price"><span class="price-sale">R$ @item.Preco</span></p>
                            </div>
                        </div>
                        <div class="bottom-area d-flex px-3">
                            <div class="m-auto d-flex">
                                <a asp-controller="Produto" asp-action="Detalhes" asp-route-id="@item.ProdutoId" class="add-to-cart d-flex justify-content-center align-items-center text-center">
                                    <span><i class="ion-ios-menu"></i></span>
                                </a>
                                <a asp-controller="Carrinho" asp-action="AddToShoppingCart" asp-route-produtoId="@item.ProdutoId" class="buy-now d-flex justify-content-center align-items-center mx-1">
                                    <span><i class="ion-ios-cart"></i></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
</section>