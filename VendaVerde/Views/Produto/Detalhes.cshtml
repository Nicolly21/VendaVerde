@model Produto 

<div class="hero-wrap hero-bread" style="background-image: url(/images/bg_1.jpg);">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span class="mr-2"><a href="index.html">Produtos</a></span> <span>Detalhes</span></p>
                <h1 class="mb-0 bread">Detalhe do Produto</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-5 ftco-animate">
                <a href="/images/product-1.jpg" class="image-popup"><img src="@Model.ImagemUrl" class="img-fluid"></a>
            </div>
            <div class="col-lg-6 product-details pl-md-5 ftco-animate">
                <h3>@Model.Nome</h3>
                
                <p class="price"><span>R$ @Model.Preco</span></p>
                <p>
                    @Model.Descricao
                </p>
                <p>
                    @Model.MaisInfo
                </p>
                <div class="row mt-4"></div>
                <p><a asp-controller="Carrinho" asp-action="AddToShoppingCart" asp-route-produtoId="@Model.ProdutoId" id="btnAddCart" class="btn btn-black py-3 px-5">Adicionar ao carrinho</a></p>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript"></script>