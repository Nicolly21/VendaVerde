@model Pedido

    <div class="col-lg-4 mt-5 cart-wrap ftco-animate">
        <div class="cart-total mb-3">
            <h3>Informe seus dados</h3>
            <p>Precisamos de mais algumas informações para entregarmos seus produtos fresquinhos bem na sua porta :)</p>

            <form asp-action="Checkout" method="post" role="form" class="info">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control text-left px-3" placeholder="" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Sobrenome" class="control-label"></label>
                    <input asp-for="Sobrenome" class="form-control text-left px-3" placeholder="" />
                    <span asp-validation-for="Sobrenome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Endereco" class="control-label"></label>
                    <input asp-for="Endereco" class="form-control text-left px-3" placeholder="" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Complemento" class="control-label"></label>
                    <input asp-for="Complemento" class="form-control text-left px-3" placeholder="" />
                    <span asp-validation-for="Complemento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cep" class="control-label"></label>
                    <input asp-for="Cep" class="form-control text-left px-3" placeholder="" />
                    <span asp-validation-for="Cep" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cidade" class="control-label"></label>
                    <input asp-for="Cidade" class="form-control text-left px-3" placeholder="" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Estado" class="control-label"></label>
                    <input asp-for="Estado" class="form-control text-left px-3" placeholder="" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Pais" class="control-label"></label>
                    <input asp-for="Pais" class="form-control text-left px-3" placeholder="" />
                    <span asp-validation-for="Pais" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control text-left px-3" placeholder="" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control text-left px-3" placeholder="" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </form>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" class="btn btn-primary py-3 px-4" value="Finalizar pedido" />
            </div>
        </div>
    </div>